<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">
    <content>
        <VBox spacing="10" prefWidth="400">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <Label text="Nom:"/>
            <TextField fx:id="nameField"/>
            
            <Label text="Budget maximum:"/>
            <TextField fx:id="budgetField"/>
            
            <Label text="Intérêt (1-10):"/>
            <TextField fx:id="interestField"/>
            
            <Label text="Compagnies autorisées:"/>
            <ListView fx:id="allowedCompanies" prefHeight="100"/>
            
            <Label text="Nouvelle destination:"/>
            <HBox spacing="10">
                <TextField fx:id="destinationField" HBox.hgrow="ALWAYS"/>
                <Button text="Ajouter" onAction="#handleAddDestination"/>
            </HBox>
            
            <Label text="Destinations:"/>
            <ListView fx:id="destinationsList" prefHeight="100"/>
        </VBox>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="OK" />
        <ButtonType fx:constant="CANCEL" />
    </buttonTypes>
</DialogPane>