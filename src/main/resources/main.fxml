<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.polytech.ui.controller.MainController"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <Label text="Gestion des Agents" style="-fx-font-size: 16; -fx-padding: 5;" />
        <Button text="Lancer la nÃ©gociation" onAction="#launchNegociation" />
    </top>
    <center>
        <SplitPane prefWidth="600.0" prefHeight="350.0">
            <items>
                <TitledPane text="Fournisseurs" expanded="true">
                    <content>
                        <VBox fx:id="providerBox" spacing="10" style="-fx-padding: 10;">
                            <ListView fx:id="providerList" />
                            <TitledPane text="Messages Fournisseurs" expanded="true">
                                <content>
                                    <ListView fx:id="buyersContactsOfProvider"/>
                                </content>
                            </TitledPane>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane text="Acheteurs" expanded="true">
                    <content>
                        <VBox fx:id="buyerBox" spacing="10" style="-fx-padding: 10;">
                            <ListView fx:id="buyerList" />
                            <TitledPane text="Messages Acheteurs" expanded="true">
                                <content>
                                    <ListView fx:id="providersContactsOfBuyers"/>
                                </content>
                            </TitledPane>
                        </VBox>
                    </content>
                </TitledPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>
